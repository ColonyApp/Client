<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		x:Class="ColonyClient.ConfigGeneral"
		Title = "Config"
		BackgroundColor="Black">
	<ContentPage.Content>
		<StackLayout Spacing="20">
			<Label Text="Nick Name" TextColor="White" IsEnabled="false" BackgroundColor="Black" />
			<Entry Text="{Binding NickName}" TextColor="Black" IsEnabled="false" BackgroundColor="White" />
			<Label Text="Mail Address" TextColor="White" IsEnabled="false" BackgroundColor="Black" /> 
			<Entry Text="{Binding MailAddress}" TextColor="Black" IsEnabled="false" BackgroundColor="White" />
			<Label Text="Group" IsEnabled="false" TextColor="White" IsVisible="false" BackgroundColor="Black" />
			<Entry Text="{Binding GroupName01}" IsEnabled="false" TextColor="Black" IsVisible="false" BackgroundColor="White" />
			<Button Text="Edit!" Command="{Binding GoToEditPage}" BackgroundColor="#66cc66" TextColor="White" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
