<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		x:Class="ColonyClient.ConfigGeneral"
		Title = "Config"
		BackgroundColor="Black">
	<ContentPage.Content>
		<StackLayout>
			<Label Text="Nick Name" BackgroundColor="White" />
			<Entry Text="{Binding NickName}" Placeholder="Enter Nick Name!" BackgroundColor="White" />
			<Label Text="Mail Address" BackgroundColor="White" /> 
			<Entry Text="{Binding MailAddress}" Placeholder="Enter Mail Address!" BackgroundColor="White" />
			<Label Text="Group" IsEnabled="false" BackgroundColor="White" />
			<Entry Text="{Binding GroupName01}" Placeholder="Enter Group Name!" IsEnabled="false" BackgroundColor="White" />
			<Button Text="Edit!" Clicked="OnEditButtonClicked" BackgroundColor="#005756" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
